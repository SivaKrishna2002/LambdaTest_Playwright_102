{
  "version": "0.1",
  "runson": "linux",
  "concurrency": 3,
  "autosplit": true,
  "retryOnFailure": true,
  "maxRetries": 1,
  "pre": [
    "pip install pytest",
    "pip install playwright",
    "playwright install"
  ],
  "testDiscovery": {
    "type": "raw",
    "mode": "static",
    "command": "find ./tests -type f -name \"test_*.py\" | sort"
    },
    "testRunnerCommand": "python -m pytest $tests -v",
    "env": {
    "LT_USERNAME": "$LT_USERNAME",
    "LT_ACCESS_KEY": "$LT_ACCESS_KEY"
  },
  "jobLabel": ["playwright", "assignment"]
}